#include <Mapper.h>

class WordCountMapper : public Mapper {
public:
	void map(const std::string& input, std::vector<std::pair<std::string, int>>& output) {
		std::istringstream iss(input);
		std::string word;
		while (iss >> word) {
			output.push_back({word, 1});
		}
	}
};


